<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7F50"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hamburgueriaz"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/gradientcolor"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="HAMBURGUERIA Z"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30dp"/>

        <TextView
            style="@style/mytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Faça seu pedido"
            android:clickable="true"/>

        <EditText
            android:id="@+id/nomecliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:hint="Digite seu nome..."/>

        <CheckBox
            android:id="@+id/bacon"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Bacon"
            />

        <CheckBox
            android:id="@+id/cheddar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Cheddar"
            />

        <CheckBox
            android:id="@+id/cebola"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Anéis de cebola"
            />

        <CheckBox
            android:id="@+id/ovo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Ovo Frito"
            />


        <CheckBox
            android:id="@+id/maionese"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Maionese"
            />

        <CheckBox
            android:id="@+id/ketchup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Ketchup"
            />

        <CheckBox
            android:id="@+id/tomate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Tomate"
            />


        <TextView
            style="@style/mytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Quantidade"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/subtrair"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="130px"
                android:backgroundTint="#FF0000"
                android:text="-"
                android:textSize="20dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/quantpedido"
                style="@style/mytextview"
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:textAlignment="center"
                android:text="0"/>

            <Button
                android:id="@+id/adicionar"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="130px"
                android:backgroundTint="#FF4500"
                android:text="+"
                android:textSize="20dp"
                android:padding="10dp"
                android:clickable="true"/>

        </FrameLayout>

        <TextView
            style="@style/mytextview"
            android:layout_marginTop="70px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumo do pedido"/>

        <TextView
            android:id="@+id/precofinal"
            style="@style/mytextview"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="R$ 0,00"/>

        <Button
            android:id="@+id/fazerPedido"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="100px"
            android:layout_gravity="center"
            android:backgroundTint="#FF4500"
            android:text="Fazer pedido"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/resumo"
            style="@style/mytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumo do Pedido"/>

        <TextView
            style="@style/mytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125px"
            android:text="Desenvolvido por Yuri"/>


    </LinearLayout>

</ScrollView>